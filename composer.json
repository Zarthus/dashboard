{
    "name": "zarthus/dashboard",
    "license": "MIT",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Zarthus\\Dashboard\\Core\\": "src/Zarthus/Dashboard/Core/",
            "Zarthus\\Dashboard\\Modules\\": "src/Zarthus/Dashboard/Modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zarthus\\Dashboard\\Core\\": "tests/Zarthus/Dashboard/Core/",
            "Zarthus\\Dashboard\\Modules\\": "tests/Zarthus/Dashboard/Modules/"
        }
    },
    "require": {
        "php": ">=7.1",
        "ext-mbstring": "*",

        "maximebf/debugbar": "^1.9",
        "guzzlehttp/guzzle": "^3.7",
        "filp/whoops": "^2.1.3",
        "league/plates": "^3.1",
        "ramsey/uuid": "^3.7",
        "roave/security-advisories": "dev-master",
        "monolog/monolog": "^1.23.0",
        "symfony/http-foundation": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "phpunit/php-code-coverage": "^5.2.2",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "scripts": {
        "general-scripts": [
            "php -r \"if (!file_exists('.env')) copy('.env.dist', '.env');\"",
            "php -r \"if (!file_exists('config/main.php')) copy('config/main.php.dist', 'config/main.php');\""
        ],
        "post-install-cmd": [
            "@general-scripts"
        ],
        "post-update-cmd": [
            "@general-scripts"
        ],

        "test": "phpunit --configuration=./app/phpunit.xml",
        "cs": "phpcs --standard=app/phpcs.ruleset.xml",
        "cbf": "phpcbf --standard=app/phpcs.ruleset.xml",
        "pre-commit": [
            "@cs"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
